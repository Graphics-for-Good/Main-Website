---
import '../styles/hero.scss'

export interface Props {
	idName: string;
  classItems: string;
}

const { idName, classItems } = Astro.props as Props;
let className = 'hero'
if (!!classItems) { 
  className = `${className} ${classItems}`
}

---
<section class={className} id={idName}>
  <slot />
</section>