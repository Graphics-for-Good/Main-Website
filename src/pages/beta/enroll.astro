---
import '../../styles/globals.scss'
import Layout from '../../layouts/Layout.astro'
---
<Layout title="Enroll | Website Beta">
  <h1>Website Features Beta Program</h1>
  <button id="enroll">Enroll</button>
  <button id="unenroll">UnEnroll</button>
  <script>
    enroll.addEventListener('click', function() {
      localStorage.setItem('isBeta', true)
      alert(`Enrolled you in the beta program.`)
    })
    unenroll.addEventListener('click', function() {
      localStorage.removeItem('isBeta')
      alert(`UnEnrolled you from the beta program.`)
    })
  </script>
</Layout>