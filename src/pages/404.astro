---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/hero.astro'
import '../styles/pages/error.scss'

var errorCode = 404
var errorName = 'Not Found'
var errorDesc = '<h2>Unfortunatly our website doen not have the page that you were looking for.</h1><h3>Either we never created this page to begin with or we have deleted it.</h3><h3>Contact <a href="/members/adarsh">The Webmaster</a> to learn more!</h2>'

var error = {
  code: errorCode, 
  name: errorName, 
  desc: errorDesc, 
}

---
<Layout title="404">
  <main id="content">
    <Hero classItems="error">
      <section>
        <div>
          <h1>{error.code} {error.name}</h1>
          <div set:html={error.desc} />
        </div>
      </section>
    </Hero>
  </main>
</Layout>