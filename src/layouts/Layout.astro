---
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'
import Modal from '../components/modal.astro'
import InfoBox from '../components/infobox.astro'

import '../styles/globals.scss'
import '../styles/icons.scss'
import '../styles/scrollAnimations.scss'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;

let dTitle = `${title} | Graphics for Good`
if (dTitle.startsWith(' | ') || dTitle.startsWith('Home | ')) dTitle = dTitle.split(' | ')[1]

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="image" content="/assets/logo.svg">
    <meta property="og:image" content="/assets/logo.svg">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="description" content="Our mission is to help create change in the world through design. We strive to provide free design help for nonprofits that support a wide range of causes.">
    <meta property="og:description" content="Our mission is to help create change in the world through design. We strive to provide free design help for nonprofits that support a wide range of causes.">
    <link href="/favicon.png" rel="icon" type="image/png" />
    <title>{dTitle}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
    <InfoBox />
    <Modal />
    <span style="display: none;" hidden tElement id="tElement"></span>
    <script>
      if (!!document.querySelector('.hero') === false && !location.pathname === '/portal/') {
        document.querySelector('.header').setAttribute('bBorder', '')
      }
      document.querySelectorAll('.btn, button, [type="submit"], [type="button"]').forEach(function(btn, i) {
        btn.setAttribute('transition', '')
      })
    </script>
    <script is:inline src="/script.js"></script>
    <script is:inline>
      // javascript:(function () { var script = document.createElement('script'); script.src="//cdn.jsdelivr.net/npm/eruda"; document.body.appendChild(script); script.onload = function () { eruda.init() } })();
    </script>
  </body>
</html>