---
import Header from '../components/header.astro'
import InfoBox from '../components/infobox.astro'

import '../styles/globals.scss'
import '../styles/footer.scss'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;

let dTitle = `${title} | Graphics for Good`
if (dTitle.startsWith(' | ')) dTitle = dTitle.replace(' | ', '')

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="image" content="/meta_image">
    <meta property="og:image" content="/meta_image">
    <meta name="twitter:card" content="summary_large_image">
    <meta property="description" content="Our mission is to help create change in the world through design. We strive to provide free design help for nonprofits that support a wide range of causes.">
    <meta property="og:description" content="Our mission is to help create change in the world through design. We strive to provide free design help for nonprofits that support a wide range of causes.">
    <link href="/favicon.png" rel="icon" type="image/png" />
    <title>{dTitle}</title>
  </head>
  <body>
    <Header />
    <slot />
    <span style="display: none;" class="hidden" hidden tElement></span>
    <script>
      if (!!document.querySelector('.hero') === false) {
        document.querySelector('.header').setAttribute('bBorder', '')
      }
    </script>
    <script is:inline src="/script.js"></script>
    <script is:inline src="/header.js"></script>
    <script is:inline src="/footer.js"></script>
    <!--<script src="eruda.js"></script>-->
    <InfoBox />
  </body>
</html>