---
import MetaTags from '../components/metatags.astro'
import Header from '../components/header.astro'
import InfoBox from '../components/infobox.astro'

import '../styles/globals.scss'
import '../styles/footer.scss'

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;

let dTitle = `${title} | Graphics for Good`
if (dTitle.startsWith(' | ')) dTitle = dTitle.replace(' | ', '')

---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaTags />
    <title>{dTitle}</title>
  </head>
  <body>
    <Header />
    <slot />
    <span style="display: none;" class="hidden" hidden tElement></span>
    <script>
      if (!!document.querySelector('.hero') === false) {
        document.querySelector('.header').setAttribute('bBorder', '')
      }
    </script>
    <script is:inline src="/script.js"></script>
    <script is:inline src="/header.js"></script>
    <script is:inline src="/footer.js"></script>
    <!--<script src="eruda.js"></script>-->
    <InfoBox />
  </body>
</html>